# Application Settings
APP_NAME=Customer Sentiment Hub API
APP_DESCRIPTION=AI-powered analysis of customer sentiment in reviews
APP_VERSION=0.1.0
ENVIRONMENT=development  # Options: development, staging, production
DEBUG=True
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
HOST=0.0.0.0
PORT=8000

# Google Cloud & Gemini Settings
GOOGLE_APPLICATION_CREDENTIALS=credentials/gemini-deployment-fe9ea6bb8c92.json
GOOGLE_CLOUD_PROJECT=your-project-id
GOOGLE_CLOUD_LOCATION=us-central1
GEMINI_MODEL_NAME=gemini-2.0-flash-001
GEMINI_TEMPERATURE=0.0
GEMINI_MAX_OUTPUT_TOKENS=1024

# Processing Settings
PROCESSING_BATCH_SIZE=5
PROCESSING_CONFIDENCE_THRESHOLD=0.3
PROCESSING_MAX_LABELS=5

# Security Settings
AUTH_TYPE=none  # Options: none, api_key, jwt
API_KEYS=dev-api-key,test-api-key
API_KEY_HEADER=X-API-Key
JWT_SECRET_KEY=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_HEADER=Authorization

# CORS Settings
CORS_ALLOW_ORIGINS=*
CORS_ALLOW_CREDENTIALS=True
CORS_ALLOW_METHODS=*
CORS_ALLOW_HEADERS=*
CORS_MAX_AGE=600

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60

FRESHDESK_API_KEY="******"
FRESHDESK_DOMAIN="******8"
FRESHDESK_MAX_TAG_LEN=32
FRESHDESK_WEBHOOK_SECRET=your_shared_secret